<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.netbirdtech.android.app.jiaoyiquan.activity.LoginActivity"
    android:padding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textColor="@color/app_main_color"
            android:id="@+id/backtoup_id"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:id="@+id/login_title_id"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/login_part_id"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:visibility="visible">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:background="#ffffff">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView3"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/login_user_icon"
                android:scaleType="fitCenter"/>
            <!--
            <com.rey.material.widget.EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/uname_login_id"
                android:inputType="none"
                android:hint="请输入用户名(不超过20个字符)"
                app:et_inputId="@+id/textfield_et_char_counter_input"
                app:et_supportMode="charCounter"
                app:et_supportMaxChars="20"
                app:et_labelEnable="false"
                app:v_styleId="@array/edittext"/>
            -->


            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/uname_login_id"
                android:hint="请输入用户名"
                android:textSize="13sp"
                android:singleLine="true"
                android:inputType="text"
                android:background="@null" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:background="#ffffff">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView3tt"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/login_pw_icon"
                android:scaleType="fitCenter"/>

            <!--
            <com.rey.material.widget.EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pw_login_id"
                android:inputType="textPassword"
                android:hint="请输入密码(至少6位字符)"
                app:et_inputId="@+id/textfield_et_helper_input"
                app:et_supportMode="none"
                app:v_styleId="@array/edittext"
                />
            -->

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/pw_login_id"
                android:hint="请输入密码"
                android:textSize="13sp"
                android:background="@null"
                android:inputType="number"
                android:singleLine="true"
                android:password="true"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                 />
        </LinearLayout>

        <!--
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登  录"
            android:id="@+id/user_login_id"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:textColor="#ffffff"
            android:background="@color/app_main_color"/>
        -->

        <com.rey.material.widget.Button
            android:id="@+id/user_login_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="登  录"
            app:v_styleId="@array/button_raise_color"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"

            />
        <!--app:v_styleId="@array/button_raise_color"-->
        <!--app:rd_enable="true"-->
        <!--style="@style/LightRaiseColorButtonRippleStyle"-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册账号"
            android:id="@+id/switchtoreg_id"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textColor="@color/app_main_color"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/register_part_id"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:visibility="gone">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:background="#ffffff">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageViewtt3"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/login_user_icon"
                android:scaleType="fitCenter"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/uname_reg_id"
                android:hint="请输入用户名(不能超过20位)"
                android:textSize="13sp"
                android:singleLine="true"
                android:background="@null" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:background="#ffffff">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView3tt88"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/login_pw_icon"
                android:scaleType="fitCenter"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/pw_reg_id"
                android:hint="请输入密码(至少6位)"
                android:textSize="13sp"
                android:background="@null"
                android:inputType="number"
                android:singleLine="true"
                android:password="true"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:background="#ffffff">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imagg"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/login_pw_icon"
                android:scaleType="fitCenter"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/pw2_reg_id"
                android:hint="请再次输入密码"
                android:textSize="13sp"
                android:background="@null"
                android:inputType="number"
                android:singleLine="true"
                android:password="true"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"/>
        </LinearLayout>

        <!--
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注  册"
            android:id="@+id/user_register_id"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/app_main_color"
            android:textColor="#ffffff" />
        -->

        <com.rey.material.widget.Button
            android:id="@+id/user_register_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="注  册"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            app:v_styleId="@array/button_raise_color"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:id="@+id/switchtolog_id"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/app_main_color"
            android:layout_marginTop="20dp" />
    </LinearLayout>

</RelativeLayout>
